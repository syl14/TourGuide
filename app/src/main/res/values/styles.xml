<resources>


    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Icondetails-->
    <style name="imageicon">
        <item name="android:layout_width">@dimen/list_item_height</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:contentDescription">@string/the_image_of_the_place</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="imagebutton">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>
    <style name="maintext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:text">Budapest</item>
        <item name="android:background">#F3E5F5</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="linearlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/textview_shadow</item>
        <item name="android:minHeight">100dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="linearlayout2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
    </style>

    <style name="collapsingToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>

    </style>
    <!-- Styles for the collapsed tool bar text-->
    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!-- Styles for the expanded tool bar text-->
    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="CategoryTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimaryDark</item>
        <item name="tabSelectedTextColor">#fff</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#2a2b60</item>
        <item name="android:textSize">@dimen/sizeOfTabText</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Imagedetails">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="detailsPlaceName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/parlament</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="detailsPlaceAddress">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:text">@string/parlament_address</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="Info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
        <item name="android:text">@string/parlament_info</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/heightOfElement</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="address" parent="name">
        <item name="android:gravity">top</item>
        <item name="android:textSize">@dimen/textSizeOfAddress</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>
